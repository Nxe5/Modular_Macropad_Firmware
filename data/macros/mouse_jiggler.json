{
  "id": "mouse_jiggler",
  "name": "Mouse Jiggler",
  "description": "Moves the mouse in a small pattern to prevent screen timeout",
  "commands": [
    {
      "type": "repeat_start",
      "count": 0
    },
    {
      "type": "mouse_move",
      "x": 1,
      "y": 0
    },
    {
      "type": "delay",
      "milliseconds": 500
    },
    {
      "type": "mouse_move",
      "x": 0,
      "y": 1
    },
    {
      "type": "delay",
      "milliseconds": 500
    },
    {
      "type": "mouse_move",
      "x": -1,
      "y": 0
    },
    {
      "type": "delay",
      "milliseconds": 500
    },
    {
      "type": "mouse_move",
      "x": 0,
      "y": -1
    },
    {
      "type": "delay",
      "milliseconds": 500
    },
    {
      "type": "repeat_end"
    }
  ]
} 